{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"exactOptionalPropertyTypes": true,
		"skipLibCheck": true,
		"strict": true
	},
	"include": [
		"eslint-config-node/**/*.",
		"eslint-config-react/**/*",
		"eslint-config-typescript/**/*",
		"index.ts",
		"eslint.config.mts"
	]
}
